<div id="<%= dom_id domain %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= domain.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= domain.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this domain", domain, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this domain', edit_domain_path(domain), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
